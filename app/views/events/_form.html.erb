<%= form_with model: @event do |f| %>
  <div class="mandatory mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Event title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :description %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="mandatory mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :location %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :location, placeholder: 'Event location', class: 'form-control' %>
    </div>
  </div>

  <div class="d-flex justify-content-between row mb-3">
    <div class="col-sm-2 mandatory">
      <div class="col-form-label">
        <%= f.label :starttime %>
      </div>
    </div>
    <div class="col-sm-4">
      <%= f.datetime_field :starttime, class: 'form-control' %>
    </div>
    <div class="col-sm-2">
      <div class="col-form-label">
        <%= f.label :endtime %>
      </div>
    </div>

    <div class="col-sm-4">
      <%= f.datetime_field :endtime, class: 'form-control' %>
    </div>
  </div>
  <div class="mandatory mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :organizermail %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :organizermail, placeholder: 'Event organizer', class: 'form-control' %>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :organizertelegram %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :organizertelegram, placeholder: 'Event organizer', class: 'form-control' %>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :link %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :link, placeholder: 'Event organizer', class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Сохранить", class: 'btn btn-sm btn-success' %>

  <div class="back-link mt-2">
    <%= link_to "Назад", :back %>
  </div>
<% end %>
